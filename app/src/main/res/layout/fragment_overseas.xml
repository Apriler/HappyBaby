<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.happybaby.happybaby.fragment.OverseasFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/colorBlack"
            android:textSize="20sp"
            android:text="海外"/>
        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/colorGray"
            />
        <ImageView
            android:id="@+id/to_shop_btn"
            android:layout_margin="5dp"
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:src="@mipmap/icon_new_shopping_car"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/colorGray" />
    <android.support.design.widget.TabLayout
        android:id="@+id/tab_layout_overseas"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:tabTextColor="@color/colorGray"
        app:tabSelectedTextColor="@color/colorBlack"
        app:tabIndicatorColor="@color/colorBlack"
        app:tabBackground="@color/colorTabBg"
        app:tabGravity="fill"
        app:tabMode="scrollable">

    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpage_overseas"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</LinearLayout>
