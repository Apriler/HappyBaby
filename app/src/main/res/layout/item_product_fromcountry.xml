<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:padding="10dp"
    android:gravity="center_vertical"
    android:layout_marginTop="10dp"
    android:background="@color/colorWhite">

    <ImageView
        android:id="@+id/iv_country_flag"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitXY"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/iv_country_flag"
        android:id="@+id/tv_countryName"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="美国"/>

    <ImageView
        android:id="@+id/iv_back5"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/mine_main_arrow"
        android:layout_alignParentRight="true"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="60dp"
        android:id="@+id/tv_referData_text"
        android:layout_toLeftOf="@+id/iv_back5"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:text="此商品价格参考美国apple.com网站"/>

</RelativeLayout>