<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">


    <RelativeLayout
        android:id="@+id/treasure_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">

        <CheckBox
            android:id="@+id/checkbox_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            style="@style/custom_checkbox"
            android:layout_centerVertical="true"
            android:background="@color/colorWhite" />

        <ImageView
            android:id="@+id/treasure_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/test_picture"
            android:layout_toRightOf="@id/checkbox_item"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:id="@+id/details_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="45465465454564564564564444454564545645646545645645645645645454564654564564546545645454544444444545545454"
            android:textSize="16sp"
            android:layout_toRightOf="@id/treasure_iv"
            android:layout_alignTop="@id/treasure_iv" />

        <TextView
            android:id="@+id/price_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Â¥00.00"
            android:textColor="@color/colorAccent"
            android:layout_alignLeft="@id/details_tv"
            android:layout_below="@id/details_tv"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/number_minus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="-"
            android:textSize="25sp"
            android:layout_alignBottom="@id/treasure_iv"
            android:layout_alignLeft="@id/details_tv"
            android:gravity="center"
            android:background="@drawable/place_view"/>

        <TextView
            android:id="@+id/number_tv"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:text="1000"
            android:textSize="16sp"
            android:layout_alignBottom="@id/treasure_iv"
            android:layout_toRightOf="@id/number_minus"
            android:textColor="@color/colorAccent"

            android:background="@drawable/place_view"
            android:gravity="center"/>

        <TextView
            android:id="@+id/number_plus"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:text="+"
            android:textSize="20sp"
            android:layout_alignBottom="@id/treasure_iv"
            android:layout_toRightOf="@id/number_tv"
            android:gravity="center"
            android:background="@drawable/place_view"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/colorLinkGray"
            android:layout_alignLeft="@id/treasure_iv"
            android:layout_marginTop="150dp"/>

    </RelativeLayout>





</LinearLayout>