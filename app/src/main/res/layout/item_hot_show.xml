<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:padding="1dp"
    android:background="@drawable/shape_event_black"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/hot_show_item_img"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher" />

    <TextView
        android:id="@+id/hot_show_item_introduction"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="3"
       android:textSize="14sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorBlack"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:id="@+id/hot_user_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/hot_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="12312312"
            android:maxLines="1"
            android:textSize="11sp"
            />

        <TextView
            android:id="@+id/show_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/overseas_love"
            android:text="3"
            android:drawablePadding="5dp"
            android:textSize="11sp"
            android:gravity="center_vertical"
            />
    </LinearLayout>

</LinearLayout>