<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_change_user_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.happybaby.happybaby.activity.ChangeUserNameActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toolbar_change"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:paddingLeft="70dp"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"
                android:text="编辑资料"/>
        </RelativeLayout>
        
    </android.support.v7.widget.Toolbar>

    
    <LinearLayout
        android:layout_marginTop="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:id="@+id/rl_change1"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >
            <TextView
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="头像"/>

            <ImageView
                android:id="@+id/iv_back1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:layout_centerVertical="true"
                android:id="@+id/iv_change_touxiang"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_toLeftOf="@id/iv_back1"
                android:src="@mipmap/ic_launcher"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLinkGray"/>



        <RelativeLayout
            android:id="@+id/rl_change2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >
            <TextView
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="昵称"/>

            <ImageView
                android:id="@+id/iv_back2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/iv_change_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/iv_back2"
                android:text="芭蕉小鹿"
                android:textSize="18sp"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLinkGray"/>


        <RelativeLayout
            android:id="@+id/rl_change3"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >
            <TextView
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="地区"/>

            <ImageView
                android:id="@+id/iv_back3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/iv_change_diqu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@id/iv_back3"
                android:text="北京市 东城区"
                android:textSize="18sp"
                />
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLinkGray"/>

        <RelativeLayout
            android:id="@+id/rl_change4"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            >
            <TextView
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:text="个性签名"/>

            <ImageView
                android:id="@+id/iv_back4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/icon_arrow_right"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_centerVertical="true"
                android:id="@+id/iv_change_qianming"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="150dp"
                android:layout_toLeftOf="@id/iv_back4"
                android:text="还没有写哦~~~"
                android:maxLines="2"
                android:maxLength="16"
                android:textSize="18sp"
                />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
